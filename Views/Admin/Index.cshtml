@model IEnumerable<Hospital.Models.Department>
@{
    ViewData["Title"] = "Index";
}

<div class="text-center m-4">
    <h4>Admin Page</h4>
</div>
<br/>
<br />
<div class="row">
    <div class="col-md-6">
        <p>
            <a asp-action="Create" class="btn btn-primary">Add Departmenents</a>
        </p>
    </div>
    <div class="col-md-6">
        <form asp-action="Index" method="get">
            <div class="form-actions no-color">
                <p>
                    Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                    <input type="submit" value="Search" class="btn btn-default" /> |
                    <a asp-action="Index">Back to Full List</a>
                </p>
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patients)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patients)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-default" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
